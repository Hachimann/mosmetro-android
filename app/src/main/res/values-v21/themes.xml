<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppBaseTheme" parent="@android:style/Theme.Material.Light.DarkActionBar">
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="android:forceDarkAllowed">true</item>
    </style>
    <style name="AppBaseTheme.Dialog" parent="@android:style/Theme.Material.Light.Dialog" />
    <style name="AppBaseTheme.Night">
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorBackgroundNight</item>
        <item name="android:textColor">@color/colorTextNight</item>
        <item name="android:textColorSecondary">@color/colorSecondaryTextNight</item>
        <item name="android:colorButtonNormal">@color/colorButton</item>
        <item name="android:checkboxStyle">@style/CheckBoxStyle</item>
        <item name="android:alertDialogTheme">@style/AlertDialogTheme</item>
        <item name="android:textColorPrimary">@color/colorSecondaryTextNight</item>
        <item name="android:navigationBarColor">@color/colorBackgroundNight</item>
        <item name="android:listViewStyle">@style/listViewPrefs</item>
    </style>
    <style name="CheckBoxStyle" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:textColor">@color/colorTextNight</item>
    </style>
    <style name="AlertDialogTheme" parent="@android:style/Theme.Material.Light.Dialog">
        <item name="android:colorBackground">@color/colorBackgroundNight</item>
        <item name="android:textColor">@color/colorTextNight</item>
        <item name="android:textColorAlertDialogListItem">@color/colorSecondaryTextNight</item>
        <item name="android:textColorPrimary">@color/colorSecondaryTextNight</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="android:buttonBarNeutralButtonStyle">@style/NeutralButtonStyle</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="NeutralButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="listViewPrefs" parent="Widget.AppCompat.ListView">
        <item name="android:background">@color/colorBackgroundNight</item>
    </style>
    <style name="AppBaseTheme.Night.AMOLED">
        <item name="android:colorPrimary">@color/colorBackgroundAMOLED</item>
        <item name="android:colorPrimaryDark">@color/colorBackgroundAMOLED</item>
        <item name="android:colorBackground">@color/colorBackgroundAMOLED</item>
        <item name="android:navigationBarColor">@color/colorBackgroundAMOLED</item>
        <item name="android:listViewStyle">@style/listViewPrefsAMOLED</item>
        <item name="android:activatedBackgroundIndicator">@drawable/background_ripple</item>
    </style>
    <style name="listViewPrefsAMOLED" parent="Widget.AppCompat.ListView">
        <item name="android:background">@color/colorBackgroundAMOLED</item>
    </style>
</resources>